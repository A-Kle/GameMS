@model GamesMS.ViewModels.BoardGameDetailsViewModel
@{
    <style>
        .container label {
            font-weight: 700;
        }
    </style>
}

<div class="container">
    <div class="col-md-3" style="display: inline-block">
        @Html.LabelFor(model => model.Name, "Name")
        <p id="Name">@Model.Name</p>
    </div>

    <div class="col-md-3">
        @Html.LabelFor(model => model.MinPlayerAge, "Minimum players age")
        <p id="MinPlayerAge">@Model.MinPlayerAge</p>
    </div>

    <div class="col-md-3">
        @Html.LabelFor(model => model.MaxPlayersNumber, "Maximum players number")
        <p id="MaxPlayersNumber">@Model.MaxPlayersNumber</p>
    </div>

    <div class="col-md-3">
        @Html.LabelFor(model => model.MinPlayersNumber, "Minimum players number")
        <p id="MinPlayersNumber">@Model.MinPlayersNumber</p>
    </div>
</div>

<div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Viewed date</th>
                <th>Source</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model.Statistics)
            {
                <tr>
                    <td>@item.ViewedDate</td>
                    <td>@item.Source</td>
                </tr>
            }
        </tbody>
    </table>
</div>